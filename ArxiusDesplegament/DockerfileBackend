# Imagen base con PHP y FPM
FROM php:8.2-fpm

# Instalar extensiones necesarias
RUN apt-get update && apt-get install -y \
    git unzip zip libicu-dev libonig-dev libxml2-dev libzip-dev curl \
    && docker-php-ext-install pdo pdo_mysql intl zip

# Establecer el directorio de trabajo
WORKDIR /var/www/html

# Copiar código fuente del proyecto
COPY . /var/www/html/

# Instalar Composer (copiamos binario desde imagen oficial)
COPY --from=composer:latest /usr/bin/composer /usr/local/bin/composer

# Ejecutar Composer para instalar dependencias sin scripts que requieren DB
RUN composer install --no-scripts --no-interaction --no-progress --no-suggest

# Dar permisos adecuados (ajusta según tu setup)
RUN chown -R www-data:www-data /var/www/html/var /var/www/html/vendor

# Exponer el puerto por donde FPM escucha internamente
EXPOSE 9000

# Comando por defecto
CMD ["php-fpm"]
